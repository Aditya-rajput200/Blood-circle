generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// donar 
// hospital 
// user 

model User {
 id    String  @id  @default(uuid())
 name  String 
 email  String  @unique
 phone  String  @unique
addresh  Addresh[]
isDoner  Boolean  @default(false)

}

model Addresh {

  id   String @id  @default(cuid())
  pincode Int
  State  String
  District String

  user User  @relation(fields: [userId],references: [id])
  userId  String


  donar Donar  @relation(fields: [donarId],references: [id])
  donarId  String
}


model Donar {
  id  String  @id @default(cuid())
  name String
  email String @unique
  addresh Addresh[]

  donation   Donation[]
}

model Donation  {
  id   Int @id  @default( autoincrement())

  
}